{{!< default}}

{{#post}}

<main class="site-main">
    <article class="{{post_class}} single">

        <header class="post-header gh-canvas">
            {{> "post-meta"}}
            <h1 class="post-title">{{title}}</h1>
            {{> "feature-image"}}
        </header>
        <div class="post-content gh-content gh-canvas">
            {{content}}
        </div>

        <div class="gh-canvas">
            <div class="author-list">
                <span class="author-list-title">
                    {{t "Written by:"}}
                </span>
                &nbsp;
                {{#foreach authors}}
                    {{> "author-box"}}
                {{/foreach}}
            </div>
            {{#if comments}}
                <section class="gh-comments">
                    <header class="gh-comments-header">
                        <h3 class="gh-comments-title author-list-title">{{t "Member discussion"}}:</h3>
                        {{comment_count class="gh-comments-count"}}
                    </header>
                    {{comments title="" count=false}}
                </section>
            {{/if}}
        </div>

    </article>
</main>

{{/post}}